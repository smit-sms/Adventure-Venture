<%- include('../includes/header')%>

<div class="container">
    <h1 style="text-align: center;">Edit Comment</h1>
    <div class="row">
        <div class="col-lg-6 col-md-12" style="width: 100%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST"> 
                <div class="form-group">
                    Comment Text: 
                    <input class="form-control" type="text" name="comment[text]" placeholder="Comment Text" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block btn-lg" type="submit">Edit Comment</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>"><button class="btn btn-primary">Go Back</button></a>
        </div>
    </div>
</div>

<%- include('../includes/footer')%>