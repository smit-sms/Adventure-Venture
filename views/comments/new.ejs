<%- include('../includes/header')%>

<div class="container">
    <h1 style="text-align: center;">Add New Comment to <i><%= campground.name %></i></h1>
    <div class="row">
        <div class="col-lg-6 col-md-12" style="width: 100%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST"> 
                <div class="form-group">
                    Comment Text: 
                    <input class="form-control" type="text" name="comment[text]" placeholder="Comment Text">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block btn-lg" type="submit">Add New</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>"><button class="btn btn-primary">Go Back</button></a>
        </div>
    </div>
</div>

<%- include('../includes/footer')%>