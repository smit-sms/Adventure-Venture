<%- include ('includes/header') %>

<div class="container">
    <h1 style="text-align: center;">Register</h1>
    <div class="row">
        <div class="col-lg-6 col-md-12" style="width: 100%; margin: 30px auto;">
            <form action="/register" method="POST">
                <div class="form-group">
                    Username: 
                    <input class="form-control" type="text" name="username" placeholder="Name" required>
                </div>
                <div class="form-group">
                    Password: 
                    <input type="password" class="form-control" name="password" placeholder="Password" required><br>
                </div>                
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block btn-lg" value="Sign Up">
                </div>
            </form>
            <p>Already have a account? Click here to <a href="/login">Login</a></p>
        </div>
    </div>
</div>

<%- include ('includes/footer') %>
