<!-- Include Header  -->
<%- include ('../includes/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Adventure-Venture</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div style="width: 100%; margin: 10px auto;">
                <div class="card">
                    <div class="card-header bg-transparent" id="showimg">
                        <img src="<%= campground.image %>">
                    </div>
                    <div class="card-body">
                        <h4 class="float-right">â‚¹ <%= campground.price %>/night</h4>
                        <h2><a href="#"><%= campground.name%></a></h2>
                        <p><%= campground.description %></p>
                        <div>
                            <b>Submitted by <i><%= campground.author.username %></i>, <%= moment(campground.createdAt).fromNow() %></b>
                            <div class="float-right">
                                <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                                    <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-warning btn-sm ">Edit</a> 
                                    <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST" class="delete-form">
                                        <button class="btn btn-sm btn-danger">Delete</button> 
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="float-right">
                            <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">
                                Add a new comment

                            </a>
                        </div>
                        <div>
                            <h4>Comments</h4>
                        </div>
                        <hr>
                        <% campground.comments.forEach(function(comment){%>
                            <div class="row">
                                <div class="col-md-12">
                                    <strong><%= comment.author.username %></strong>
                                    <span class="float-right"><%= moment(comment.createdAt).fromNow() %></span>
                                    <div>
                                        <%= comment.text %> 
                                        <div class="float-right">                                            
                                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                                <a class="btn btn-sm btn-warning" 
                                                href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">
                                                    Edit
                                                </a>                                                
                                                <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST" class="delete-form">
                                                    <input type="submit" class="btn btn-sm btn-danger " value="Delete">
                                                </form>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div><br>

<!-- Include Footer  -->
<%- include ('../includes/footer.ejs') %>