<%- include('../includes/header')%>

<div class="container">
    <h1 style="text-align: center;">Edit <%= campground.name %></h1>
    <div class="row">
        <div class="col-lg-6 col-md-12" style="width: 100%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    Name: 
                    <input class="form-control" type="text" name="campground[name]" placeholder="Name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    Image Url: 
                    <input class="form-control" type="text" name="campground[image]" placeholder="Image url" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    Description: 
                    <textarea class="form-control" type="text" name="campground[description]" placeholder="Description" rows="4"><%= campground.description %></textarea>
                </div>                
                <div class="form-group">
                    <button class="btn btn-primary btn-block btn-lg" type="submit">Update</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>"><button class="btn btn-primary">Go Back</button></a>
        </div>
    </div>
</div>

<%- include('../includes/footer')%>